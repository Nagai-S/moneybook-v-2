<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="form_wrapper">
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="<%= label_class %>">
      <%= f.label :email, "メールアドレスを入力してください" %><br />
    </div>
    <div class="<%= form_class %>">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "user" %>
    </div>
  </div>

  <div class="row">
    <div class="<%= label_class %>">
      <%= f.label :password, "パスワードを入力してください" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
    </div>
    <div class="<%= form_class %>">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "user" %>
    </div>
  </div>

  <div class="row">
    <div class="<%= label_class %>">
      <%= f.label :password_confirmation, "もう一度入力してください" %><br />
    </div>
    <div class="<%= form_class %>">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "user" %>
    </div>
  </div>

  <%= f.submit "会員登録", class: "btn btn-primary", role: "button" %>
  <div>
    <%= link_to "プライバシーポリシー", "https://kiyac.app/plivacypolicy/WYqhMfQeu1bYTZi2ta2A", target: :_blank %>に同意したものとします。
  </div>
  <%= render "users/shared/links" %>
</div>

<% end %>