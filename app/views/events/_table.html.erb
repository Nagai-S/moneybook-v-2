<div class="table_contents">
<%= paginate @events, param_name: :event_page %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>日付</th>
          <th>ジャンル</th>
          <th>メモ</th>
          <th>金額</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% a=0 %>
      <% @events.each do |event| %>
        <tr class='<%= which_iae(event)%>'>
          <td><%= l event.date unless a==event.date %></td>
          <td><%= event.genre_name %></td>
          <td><%= event.memo %></td>
          <td><%= event.value.to_s(:currency, locale: event.currency.locale) %></td>
          <td>
            <%= link_to "詳細", event_path(event.id) %>
          </td>
          <td>
            <%= link_to "削除", event_path(event.id), method: :DELETE, data: {confirm: "削除してよろしいですか？", turbolinks: false} %>
          </td>
          <td>
            <%= link_to "編集", edit_event_path(event.id) %>
          </td>
        </tr>
        <% a = event.date %>
        <% end %>
      </tbody>
    </table>
  </div>
<%= paginate @events, param_name: :event_page %>
</div>
