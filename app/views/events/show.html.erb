<h1>記録</h1>
<div class="row">
  <div class="col-10 offset-1 col-sm-8 offset-sm-4 col-md-6 offset-md-6 page_top_menu">
    <li><%= link_to "編集", edit_event_path(@event.id) %></li>
    <li><%= link_to "削除", event_path(@event.id), method: :DELETE, data: {confirm: "削除してよろしいですか？", turbolinks: false} %></li>
  </div>
</div>
<div class='row'>
  <div class="table_contents col-12 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <td class = 'text-left'>日付</td>
            <td class = 'text-left'><%= l @event.date %></td>
          </tr>
          <tr>
            <td class = 'text-left'>支出または収入</td>
            <td class = 'text-left'><%= @event.iae_name %></td>
          </tr>
          <tr>
            <td class = 'text-left'>ジャンル</td>
            <td class = 'text-left'><%= @event.genre_name %></td>
          </tr>
          <tr>
            <td class = 'text-left'>支払い方法</td>
            <td class = 'text-left'><%= @event.payment_source_name %></td>
          </tr>
          <tr>
            <td class = 'text-left'>引き落としアカウント</td>
            <td class = 'text-left'><%= @event.account_name %></td>
          </tr>
          <tr>
            <td class = 'text-left'>支払い金額</td>
            <td class = 'text-left'><%= @event.value.to_s(:currency, locale: @event.currency.locale) %></td>
          </tr>
          <tr>
            <td class = 'text-left'>引き落とし金額</td>
            <td class = 'text-left'><%= @event.pay_value.to_s(:currency, locale: @event.pay_currency.locale) %></td>
          </tr>
          <tr>
            <td class = 'text-left'>メモ</td>
            <td class = 'text-left'><%= @event.memo %></td>
          </tr>
          <tr>
            <td class = 'text-left'>引き落とし日</td>
            <td class = 'text-left'>
              <% if @event.pay_date %>
                <%= l @event.pay_date %>
              <% else %>
                ー
              <% end %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
