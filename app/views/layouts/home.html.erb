<!DOCTYPE html>
<html>

<head>
  <%= display_meta_tags default_meta_tags %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="google-site-verification" content="aU558E-vKBtCFdk3cnqm707Qbh5je_1KtYYMns0_J4w" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_pack_tag 'application', media: 'all' %>
  <%= javascript_pack_tag 'application' %>

  <%= favicon_link_tag 'favicon.png'%>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-JN25PYQNRL"></script>
  <script>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());

    gtag('config', 'G-JN25PYQNRL');
  </script>
</head>

<body>
  <div class="wrapper">
    <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

    <header>
      <% if user_signed_in? %>
      <div class="menu close">=</div>
      <div class="menu open">×</div>

      <h1 class="headline">
        <%= link_to image_tag("logo.png", height: "55"), user_events_path(current_user) %>
      </h1>

      <div class="header_list">
        <ul>
          <li><%= link_to "トップ", user_events_path(current_user) %></li>
          <li><%= link_to "新規入力", new_user_event_path(current_user) %></li>
          <li><%= link_to "残高", user_accounts_path(current_user) %></li>
          <li><%= link_to "クレジットカード", user_cards_path(current_user) %></li>
          <li><%= link_to "ジャンル", user_genres_path(current_user) %></li>
          <li class="last"><%= link_to "登録情報", edit_user_registration_path %></li>
        </ul>
      </div>

      <div class="dropdown_list" id="close">
        <ul>
          <li><%= link_to "トップ", user_events_path(current_user) %></li>
          <li><%= link_to "新規入力", new_user_event_path(current_user) %></li>
          <li><%= link_to "残高", user_accounts_path(current_user) %></li>
          <li><%= link_to "クレジットカード", user_cards_path(current_user) %></li>
          <li><%= link_to "ジャンル", user_genres_path(current_user) %></li>
          <li class="last"><%= link_to "登録情報", edit_user_registration_path %></li>
        </ul>
      </div>

      <% else %>
      <h1 class="headline"><%= link_to image_tag("logo.png", height: "60"), root_path %></h1>
      <% end %>
    </header>

    <div class="contents" id="contents">

      <%= yield %>

    </div>
    <footer>
      <% if user_signed_in? %>
      <div class="footer_menu" id="login_footer">
        <div class="index1">
          <ul>
            <li class="top_bold">一覧</li>
            <li><%= link_to "トップ", user_events_path(current_user) %></li>
            <li><%= link_to "残高", user_accounts_path(current_user) %></li>
            <li><%= link_to "クレジットカード", user_cards_path(current_user) %></li>
            <li><%= link_to "ジャンル", user_genres_path(current_user) %></li>
            <li><%= link_to "振替", user_account_exchanges_path(current_user) %></li>
          </ul>
        </div>
        <div class="index2">
          <ul>
            <li class="top_bold">新規作成</li>
            <li><%= link_to "新規入力", new_user_event_path(current_user) %></li>
            <li><%= link_to "アカウント", new_user_account_path(current_user) %></li>
            <li><%= link_to "クレジットカード", new_user_card_path(current_user) %></li>
            <li><%= link_to "ジャンル", new_user_genre_path(current_user) %></li>
            <li><%= link_to "振替", new_user_account_exchange_path(current_user) %></li>
          </ul>
        </div>
        <div class="index3">
          <ul>
            <li class="top_bold">その他</li>
            <li><%= link_to "アプリの使い方", user_explanation_path(user_id: current_user.id) %></li>
            <li><%= link_to "検索", user_events_search_path(current_user) %></li>
            <li><%= link_to "登録情報", edit_user_registration_path %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしてよろしいですか？"} %></li>
          </ul>
        </div>
      </div>
      <% end %>
      <div class="footer_list">
        <ul>
          <li><%= link_to "プライバシーポリシー", "https://kiyac.app/plivacypolicy/WYqhMfQeu1bYTZi2ta2A", target: :_blank %></li>
          <li><%= link_to "お問い合わせ", "https://docs.google.com/forms/d/e/1FAIpQLSfzP9iZYG32mfQXEHrdiLlpFTSBy7zJ-ct3f1VwkwkUJPzL7Q/viewform", target: :_blank %></li>
          <li class="last"><%= link_to "アプリトップ", root_path %></li>
        </ul>
      </div>
      <p>© All rights reserved by S.N.</p>
    </footer>
  </div>
</body>

</html>